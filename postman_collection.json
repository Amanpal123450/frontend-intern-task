{
  "info": {
    "name": "Frontend Intern Task API",
    "_postman_id": "intern-task-123",
    "description": "API Collection for Signup, Login, Profile & Tasks CRUD",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Signup",
      "request": {
        "method": "POST",
        "header": [{
          "key": "Content-Type",
          "value": "application/json"
        }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Aman\",\n  \"email\": \"aman@example.com\",\n  \"password\": \"123456\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/auth/signup",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "auth", "signup"]
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{
          "key": "Content-Type",
          "value": "application/json"
        }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"aman@example.com\",\n  \"password\": \"123456\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "auth", "login"]
        }
      }
    },
    {
      "name": "Get Profile",
      "request": {
        "method": "GET",
        "header": [{
          "key": "Authorization",
          "value": "Bearer {{token}}"
        }],
        "url": {
          "raw": "http://localhost:5000/api/profile",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "profile"]
        }
      }
    },
    {
      "name": "Get Tasks",
      "request": {
        "method": "GET",
        "header": [{
          "key": "Authorization",
          "value": "Bearer {{token}}"
        }],
        "url": {
          "raw": "http://localhost:5000/api/items",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "items"]
        }
      }
    },
    {
      "name": "Create Task",
      "request": {
        "method": "POST",
        "header": [{
          "key": "Authorization",
          "value": "Bearer {{token}}"
        }, {
          "key": "Content-Type",
          "value": "application/json"
        }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Test Task\",\n  \"description\": \"This is a test task\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/items",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "items"]
        }
      }
    }
  ]
}
